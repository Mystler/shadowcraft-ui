!!! 5
%html.no-js
  %head
    %title= @page_title.nil? ? "ShadowCraft - Rogue DPS Spreadsheet" : "#{@page_title} - ShadowCraft"
    %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    %meta(name="viewport" content="width=device-width, initial-scale=0.85333, user-scalable=no")
    %meta(name="apple-mobile-web-app-capable" content="yes")
    %meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
    %meta(name="keywords" content="wow,warcraft,rogue,game,dps,raid")
    %meta(name="description" content="A World of Warcraft rogue DPS optimizer and gear planner")
    %link(rel="shortcut icon" href="/images/favicon.png" type="image/png")
    %link(type="text/plain" rel="author" href="http://shadowcraft.mmo-mumble.com/humans.txt")

    =include_stylesheets :app
    =include_stylesheets :print
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = csrf_meta_tag
    =javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"
    =include_javascripts  :app

    #{yield :head}
    :javascript
      window.FLASH = #{raw flash.reject {|k, v| k.to_s.match(/^_/) }.to_json};
  %body
    #container{:class => "#{params[:controller]}-#{params[:action]}"}
      =yield
